{
    "name": "escape/tennis-match-scoreboard",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mikhail Tsepelev",
            "email": "cplvmhl@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-redis": "*",
        "doctrine/dbal": "3.8.3",
        "doctrine/orm": "2.19.4",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.13",
        "slim/twig-view": "^3.4",
        "symfony/cache": "6.4.6"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.19",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html var/test/coverage"
    }
}
